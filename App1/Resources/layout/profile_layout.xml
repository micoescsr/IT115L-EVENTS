<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFE5E5E5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileTitle"
        android:text="Update Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="24dp"
        android:textColor="#FF000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studNumTV"
        android:text="Student No."
        android:textColor="#FF000000"
        android:paddingBottom="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"    
        android:id="@+id/studNumET"
        android:hint="2022153519"
        android:inputType="none"
        android:focusable="false"
        android:cursorVisible="false"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fNameTV"
        android:text="First Name"
        android:textColor="#FF000000"
        android:paddingBottom="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fNameET"
        android:hint="Kerby"
        android:inputType="none"
        android:focusable="false"
        android:cursorVisible="false"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lNameTV"
        android:text="Last Name"
        android:textColor="#FF000000"
        android:paddingBottom="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lNameET"
        android:hint="Salandanan"
        android:inputType="none"
        android:focusable="false"
        android:cursorVisible="false"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/programTV"
        android:text="Program"
        android:textColor="#FF000000"
        android:paddingBottom="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/programInput"
        android:hint="BSIT"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yearLevelTV"
        android:text="Year Level"
        android:textColor="#FF000000"
        android:paddingBottom="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yearLevelET"
        android:hint="2nd Year"
        android:inputType="none"
        android:focusable="false"
        android:cursorVisible="false"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/houseTV"
        android:text="CCIS House"
        android:textColor="#FF000000"
        android:paddingBottom="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/houseET"
        android:hint="Sentinels"
        android:inputType="none"
        android:focusable="false"
        android:cursorVisible="false"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordTV"
        android:text="Password"
        android:textColor="#FF000000"
        android:paddingBottom="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordInput"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:paddingBottom="24dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitBtn"
        android:text="SUBMIT"
        android:layout_marginTop="16dp"
        android:background="#FFE5E5E5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/returnBtn"
        android:text="RETURN"
        android:layout_marginTop="8dp"
        android:background="#FFE5E5E5"/>
</LinearLayout>